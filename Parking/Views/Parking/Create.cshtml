@{

}
<h1 class="display-4">Parking4e</h1>
<div class="container-fluid">

    <h1 class="text-center">Създаване на паркинг</h1>
    <hr>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Име</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Име..." />
        </div>
        <div class="form-group">
            <label asp-for="Address">Адрес</label>
            <textarea class="form-control" asp-for="Address" rows="4" placeholder="Адрес..."></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CountPlace">Общ брой места</label>
            <input type="text" asp-for="CountPlace" class="form-control" placeholder="Общ брой места..." />
        </div>
        <div class="form-group" id="Price">
            <label asp-for="Price">Цена</label>
            <input type="text" asp-for="Price" class="form-control" placeholder="Цена..." />
        </div>
        <div class="form-group" id="Price12h">
            <label asp-for="Price12h">Цена за 12 часа</label>
            <input type="text" asp-for="Price12h" class="form-control" placeholder="Цена за 12 часа..." />
        </div>
        <div class="form-group" id="Price24h">
            <label asp-for="Price24h">Цена за 24 часа</label>
            <input type="text" asp-for="Price24h" class="form-control" placeholder="Цена за 24 часа..." />
        </div>
        <div class="form-group">
            <label asp-for="Image">Изберете снимка: </label>
            <input asp-for="Image" />
        </div>
        <h2 class="text-center">Тип на паркинга</h2>
        <hr />


        <div class="product-type-holder mt-4 d-flex justify-content-around">


            @{
                string[] str = new[] { "Платен паркинг", "Безплатен паркинг" };
                @foreach (var item in str)
                {
                    <div class="form-check form-check-inline">
                        <input id="radioButtons" type="radio" class="form-check-input" asp-for="ParkingType" value="@item" />
                        <label class="form-check-label" asp-for="@item">@item</label>
                    </div>
                }

            }

        </div>

        <input type="submit" value="Create" />

    </form>

</div>
@section Scripts {
    <script>
        
    </script>
}
