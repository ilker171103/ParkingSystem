@{
}
<h1 class="display-4">Parking4e</h1>
<div class="container-fluid">

    <h1 class="text-center">Create Product</h1>
    <hr>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Name..." />
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <textarea class="form-control" asp-for="Address" rows="4" placeholder="Description..."></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CountPlace"></label>
            <input type="text" asp-for="CountPlace" class="form-control" placeholder="Price..." />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="text" asp-for="Price" class="form-control" placeholder="Price..." />
        </div>

        <h2 class="text-center">Parking Type</h2>
        <hr />


        <div class="product-type-holder mt-4 d-flex justify-content-around">
            @{
                string[] str = new[] { "PaidParking", "FreeParking" };
                @foreach (var item in str)
                {
                    <div class="form-check form-check-inline">
                        <input type="radio" class="form-check-input" asp-for="ProductType" value="@item" />
                        <label class="form-check-label" asp-for="@item">@item</label>
                    </div>
                }
            }

        </div>
        
        <input type="submit" value="Create" />

    </form>

</div>

